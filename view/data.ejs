<!DOCTYPE html>
<html>
<head>
    <title><%- page%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<div class="col-md-4" >
	<form class="form-inline" id="form" method="post">
		<input class="form-control mr-sm-2" id="key" type="text" placeholder="Search">
		<input type="submit" value="Search" class="btn btn-success">
	</form>
</div>
<div class="col-md-12 col-md-offset-12">
	<br>
	<div>
		<center>
			<table class="table table-hover text-center">
				<tr>
					<td>Action</td>
					<td>No</td>
					<td>Year</td>
					<td>Industry_aggregation_NZSIOC</td>
					<td>Industry_code_NZSIOC</td>
					<td>Industry_name_NZSIOC</td>
					<td>Units</td>
					<td>Variable_code</td>
					<td>Variable_name</td>
					<td>Variable_category</td>
					<td>Value</td>
				</tr>
				<% 
					i = 1;
					datas.forEach(function(cat){ 
						
				%>
                <tr>
					<td>
						<a href="#delete.<%- cat._id %>"><i class="fa fa-trash" style="font-size:18px"></i></a>
						<a href="/<%- cat._id %>"><i class="fa fa-edit" style="font-size:18px"></i></a>
					</td>
					<td><%- i++ %></td>
					<td><%- cat.Year %></td>
					<td><%- cat.Industry_aggregation_NZSIOC %></td>
					<td><%- cat.Industry_code_NZSIOC %></td>
					<td><%- cat.Industry_name_NZSIOC %></td>
					<td><%- cat.Units %></td>
					<td><%- cat.Variable_code %></td>
					<td><%- cat.Variable_name %></td>
					<td><%- cat.Variable_category %></td>
					<td><%- cat.Value %></td>
				</tr>
				<script type="text/javascript">
					document.querySelector("a[href='#delete.<%- cat._id %>']").addEventListener("click", function(event) {
						event.preventDefault();
						$.ajax({
							type: 'delete',
							url: '/<%- cat._id %>'
						})
						alert('Xóa thành công ')
						window.location.href='/'; 	
					});
					
				</script>
				<% }); %>
			</table>
			
		<center>
	</div>
</div>	
<script type="text/javascript">
    $(document).ready(function(){
        $( "#form" ).submit(function(event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: '/search',
                data: {'key' : document.getElementById("key").value},
                dataType: "json",
                })
        });
    });

</script>
</body>
</html>
